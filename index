  padding: 72px 20px;
}

.profile__name {
  font-size: clamp(34px, 4vw, 56px);
  margin: 0 0 12px;
  color: rgba(255, 255, 255, 0.92);
  letter-spacing: -0.02em;
}

.profile__bio {
  max-width: 58ch;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.6;
  margin: 0 0 22px;
}

.profile__links {
  display: flex;
  gap: 18px;
  flex-wrap: wrap;
}

.profile__links a {
  color: rgba(200, 245, 255, 0.85);
  text-decoration: none;
  opacity: 0.9;
  transition: opacity 180ms ease;
}

.profile__links a:hover {
  opacity: 1;
}
